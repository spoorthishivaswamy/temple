<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.spoorthis.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main">



  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <!--add-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"/>






  </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:columnCount="4"
      android:columnOrderPreserved="false"
      android:padding="14dp"
      android:rowCount="1">


    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_margin="20dp"
        app:cardElevation="10dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pooja ID"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

      </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Pooja:"
          android:layout_margin="10dp"
          android:textSize="30sp"
          android:textStyle="bold"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Diety:"
          android:layout_margin="10dp"
          android:textSize="30sp"
          android:textStyle="bold"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Price:"
          android:layout_margin="10dp"
          android:textSize="30sp"
          android:textStyle="bold"/>

      <Button
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="Edit"
          android:textAlignment="center"
          android:layout_gravity="bottom"
          android:layout_marginLeft="200dp"/>



    </LinearLayout>

     <android.support.v7.widget.CardView
      android:layout_width="200dp"
      android:layout_height="130dp"
      android:layout_margin="20dp"
         app:cardCornerRadius="4dp"
      app:cardElevation="10dp">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
         <RadioGroup
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_margin="20dp"
             android:textAlignment="center"
             android:layout_gravity="center"
             android:id="@+id/radioGroup">
           <RadioButton
               android:id="@+id/cash"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginBottom="20dp"
               android:checked="true"
               android:textSize="15dp"
               android:textColor="#828383"
               android:text="Cash Payment"/>

           <RadioButton
               android:id="@+id/card"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_margin="0dp"
               android:layout_marginTop="10dp"
               android:textSize="15dp"
               android:textColor="#828383"
               android:text="Card  payment"/>
         </RadioGroup>
       </LinearLayout>

  </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <Button
          android:layout_width="200dp"
          android:layout_height="100dp"
          android:text="PRINT"
          android:textAlignment="center"
          android:layout_gravity="bottom"
          android:layout_marginTop="20dp"/>
    </LinearLayout>





  </GridLayout>
  
  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:columnCount="3"
      android:layout_margin="40dp"
      android:rowCount="2"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:clickable="true"
          app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <TextView
            android:id="@+id/datetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_insert_invitation_black_24dp"
            android:hint="date"
            android:width="180dp"
            android:height="200dp"
            android:padding="0dp"
            android:textAlignment="center"
              android:gravity="center"
            android:layout_marginTop="0dp"
            android:textSize="25dp"
            android:textColor="#828383"/>

        </LinearLayout>

      </android.support.v7.widget.CardView
          >


      <android.support.v7.widget.CardView
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:clickable="true"
          app:cardElevation="20dp"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/searchtxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableRight="@drawable/ic_search_black_24dp"
                  android:hint="Find Devotee"
                  android:width="180dp"
                  android:height="200dp"
                  android:padding="0dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginTop="0dp"
                  android:textSize="25dp"
                  android:textColor="#828383"/>

          </LinearLayout>

      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:clickable="true"
          app:cardElevation="20dp">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/poojatxt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Shashwatha Pooja"
                  android:width="180dp"
                  android:height="200dp"
                  android:padding="0dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginTop="0dp"
                  android:textSize="25dp"
                  android:textColor="#828383"/>

          </LinearLayout>

      </android.support.v7.widget.CardView
          >

      <android.support.v7.widget.CardView
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:clickable="true"
          app:cardElevation="20dp">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/adddevotee"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Add Devotee"
                  android:width="180dp"
                  android:height="200dp"
                  android:padding="0dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginTop="0dp"
                  android:textSize="25dp"
                  android:textColor="#828383"/>

          </LinearLayout>

      </android.support.v7.widget.CardView
          >

      <android.support.v7.widget.CardView
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:clickable="true"
          app:cardElevation="20dp">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/donation"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Donation"
                  android:width="180dp"
                  android:height="200dp"
                  android:padding="0dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginTop="0dp"
                  android:textSize="25dp"
                  android:textColor="#828383"/>

          </LinearLayout>

      </android.support.v7.widget.CardView
          >
      <android.support.v7.widget.CardView
          android:layout_width="200dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:clickable="true"
          app:cardElevation="20dp">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:id="@+id/expenditure"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Expenditure"
                  android:width="180dp"
                  android:height="200dp"
                  android:padding="0dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginTop="0dp"
                  android:textSize="25dp"
                  android:textColor="#828383"/>

          </LinearLayout>

      </android.support.v7.widget.CardView
          >

    
    
  </GridLayout>
  
  
</LinearLayout>






</LinearLayout>
